<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/card">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="Bata flat 10% discount"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/colorPrimary"
                android:id="@+id/offer_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/offer_name"
                app:layout_constraintBottom_toBottomOf="@+id/offer_name"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                android:text="( Usage : 1 out of 5 )"
                android:fontFamily="@font/poppins_light"
                android:textSize="9dp"
                android:textColor="@color/red"
                android:id="@+id/usage"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/offer_name"
                app:layout_constraintLeft_toLeftOf="@id/offer_name"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/colorPrimary"
                android:text="( Offer code : 78983089723872 )"
                android:textSize="10dp"
                android:id="@+id/offer_code" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/offer_code"
                app:layout_constraintLeft_toLeftOf="@id/offer_name"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/green"
                android:text="Offer Availed from : Bata Show Room, Banani, Dhaka "
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:textSize="11dp"
                android:id="@+id/offer_shop" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/offer_shop"
                app:layout_constraintLeft_toLeftOf="@id/offer_name"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/colorPrimary"
                android:text="Sales Contact : 01715436639 "
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:textSize="10dp"
                android:id="@+id/offer_contact" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/offer_contact"
                app:layout_constraintLeft_toLeftOf="@id/offer_name"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/colorPrimary"
                android:text="Availed at : 10:23 am , 13-Jan-2019"
                android:layout_marginTop="1dp"
                android:layout_marginRight="10dp"
                android:textSize="10dp"
                android:id="@+id/offer_time" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/card"/>




</android.support.constraint.ConstraintLayout>