<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guidelineVerMain5"
            app:cardCornerRadius="4dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/image_of_point"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineVerMain5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="ndosva"
            android:fontFamily="@font/avenir_bold"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:id="@+id/header_text"
            android:textSize="13dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineVerMain5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_text"
            android:text="ndosva"
            android:fontFamily="@font/avenir_light"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:id="@+id/body_text"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/body_text"
            app:layout_constraintLeft_toLeftOf="@id/body_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_white"
            android:backgroundTint="@color/green"
            android:src="@drawable/phone"
            android:padding="5dp"
            android:tint="@color/white"
            android:id="@+id/phone"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/phone"
            app:layout_constraintBottom_toBottomOf="@+id/phone"
            android:text="ndosva"
            android:fontFamily="@font/avenir_light"
            android:textColor="@color/green"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:textSize="12dp"
            android:id="@+id/mobile_number"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/mobile_number"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:id="@+id/call">

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/guidelineVerMain5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".02" />
    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

