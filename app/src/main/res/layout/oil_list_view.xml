<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sos_cons_layout">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/image"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/image"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#6f7070"
            android:id="@+id/header_text"
            android:textSize="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/header_text"
            android:fontFamily="@font/roboto_light"
            android:textColor="#6f7070"
            android:id="@+id/description_text"
            android:textSize="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/guidelineVerMain5"
            android:text="500"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#212431"
            android:id="@+id/price_text"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/guidelineVerMain5"
            android:text="Price :"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#212431"
            android:id="@+id/price"
            android:textSize="11dp"/>

        <android.support.constraint.Guideline
            android:id="@+id/guidelineVerMain5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

