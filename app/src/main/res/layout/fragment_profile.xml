<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f9f9">


            <android.support.constraint.ConstraintLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/profile"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:src="@drawable/menu"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/tip_bar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/bar"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"
                android:layout_marginLeft="10dp">

                <ProgressBar
                    android:id="@+id/progressbars_tips"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tips"
                    app:layout_constraintLeft_toLeftOf="@+id/tips"
                    app:layout_constraintRight_toRightOf="@+id/tips"
                    app:layout_constraintTop_toTopOf="@+id/tips"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/tips_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:padding="10dp"
                    android:src="@drawable/circle_white"
                    android:tint="@color/colorAccent"
                    android:visibility="invisible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/tips"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:padding="17dp"
                    android:src="@drawable/bulb"

                    android:visibility="invisible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/photo_bar"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                app:layout_constraintTop_toBottomOf="@+id/bar"
                android:layout_marginTop="25dp">
                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="137dp"
                    android:layout_height="137dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_shadow"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/guideline9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/final_pro"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/guideline9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                    app:layout_constraintRight_toRightOf="@+id/profile_image"
                    android:src="@drawable/circle_white"
                    android:tint="#ea0095ff"
                    android:padding="7dp"
                   android:visibility="gone"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                    app:layout_constraintRight_toRightOf="@+id/profile_image"
                    android:src="@drawable/photo_edit"
                    android:id="@+id/change_pic"
                    android:padding="14dp"
                    android:visibility="gone"/>



                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/suzuki_pro_headline"
                    android:gravity="center"
                    android:text="Set name"
                    android:textColor="@color/colorAccent"
                    android:textSize="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guideline9" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toBottomOf="@id/name"
                    app:layout_constraintLeft_toRightOf="@+id/name"
                    android:src="@drawable/edit"
                    android:padding="5dp"
                    android:id="@+id/name_edit"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    android:orientation="horizontal"
                    android:id="@+id/location_set"
                    >
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/card_logo_lacation"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/location"
                        android:fontFamily="@font/suzuki_pro_regular"
                        android:layout_marginTop="5dp"
                        android:text="No location set"
                        android:textColor="@color/colorAccent3"
                        android:textSize="12dp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toLeftOf="@+id/location_set"
                    app:layout_constraintRight_toRightOf="@+id/location_set"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    android:orientation="horizontal"
                    android:id="@+id/location_set2"
                    android:clickable="true">



                </LinearLayout>

                <android.support.constraint.Guideline
                    android:id="@+id/guideline9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".65" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:layout_constraintTop_toBottomOf="@+id/photo_bar"
                android:id="@+id/details_bar"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/one"
                    app:layout_constraintBottom_toBottomOf="@+id/one"
                    android:id="@+id/linear_1"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/two"
                    app:layout_constraintBottom_toBottomOf="@+id/two"
                    android:id="@+id/linear_2"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/three"
                    app:layout_constraintBottom_toBottomOf="@+id/three"
                    android:id="@+id/linear_3"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/four"
                    app:layout_constraintBottom_toBottomOf="@+id/four"
                    android:id="@+id/linear_4"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/five"
                    app:layout_constraintBottom_toBottomOf="@+id/five"
                    android:id="@+id/linear_5"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/six"
                    app:layout_constraintBottom_toBottomOf="@+id/six"
                    android:id="@+id/linear_6"
                    android:orientation="horizontal">

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"

                    app:layout_constraintBottom_toTopOf="@+id/two"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread_inside">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/age"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="set age"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp"
                        android:id="@+id/age"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:src="@drawable/edit"
                        android:tint="@color/colorAccent3"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="34dp"
                        android:background="@color/colorAccent4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/three"
                    app:layout_constraintTop_toBottomOf="@+id/one">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/phone_no"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text=""
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp"
                        android:id="@+id/phone_number"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:src="@drawable/locked" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="34dp"
                        android:background="@color/colorAccent4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/four"
                    app:layout_constraintTop_toBottomOf="@+id/two">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/mail"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="set mail"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp"
                        android:id="@+id/mail"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:src="@drawable/edit"
                        android:tint="@color/colorAccent3"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="34dp"
                        android:background="@color/colorAccent4" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/five"
                    app:layout_constraintTop_toBottomOf="@+id/three">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/password2"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text=""
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp"
                        android:id="@+id/pass_text"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:src="@drawable/edit"
                        android:tint="@color/colorAccent3"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="34dp"
                        android:background="@color/colorAccent4" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/six"
                    app:layout_constraintTop_toBottomOf="@+id/four">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/facebook"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="connect"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:tint="@color/colorAccent4"
                        android:src="@drawable/circle_white"
                        />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:tint="@color/white"
                        android:src="@drawable/plus_sign"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="34dp"
                        android:background="@color/colorAccent4" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/five">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/google"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="connect"
                        android:textColor="@color/colorAccent3"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        android:tint="@color/colorAccent4"
                        android:src="@drawable/circle_white"
                        />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"
                        android:tint="@color/white"
                        android:src="@drawable/plus_sign"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="34dp"
                        android:background="@color/colorAccent4" />

                </RelativeLayout>


            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="281dp"
                app:layout_constraintTop_toBottomOf="@+id/photo_bar"
                android:id="@+id/settings"
                android:layout_marginTop="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/colorAccent4"
                    android:id="@+id/v1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"/>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:id="@+id/new1"
                    app:layout_constraintTop_toBottomOf="@+id/v1"
                    app:layout_constraintVertical_chainStyle="spread_inside">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Edit Profile"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />


                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"

                        android:paddingTop="14dp"
                        android:paddingLeft="14dp"
                        android:paddingBottom="14dp"
                        android:paddingRight="3dp"
                        android:src="@drawable/new_edit3"
                        android:tint="@color/grey4"
                        android:id="@+id/new_edit_profile"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                       android:layout_alignParentBottom="true"
                        android:background="@color/colorAccent4" />
                </RelativeLayout>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:id="@+id/new2"
                    app:layout_constraintTop_toBottomOf="@+id/new1"
                    app:layout_constraintVertical_chainStyle="spread_inside">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Loyalty Profile"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />


                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/loyalty_profile"
                        android:paddingTop="14dp"
                        android:paddingLeft="14dp"
                        android:paddingBottom="14dp"
                        android:paddingRight="8dp"
                        android:src="@drawable/loyal3"
                        android:tint="@color/grey4"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorAccent4" />
                </RelativeLayout>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:id="@+id/new3"
                    app:layout_constraintTop_toBottomOf="@+id/new2"
                    app:layout_constraintVertical_chainStyle="spread_inside">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
