<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select a district !"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="10dp"
        android:fontFamily="@font/avenir_medium"
        android:textSize="19dp"
        android:id="@+id/header"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_district_selection"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/avenir_light"
        android:textSize="15dp"
        android:gravity="left"
        android:id="@+id/body"/>
    <AutoCompleteTextView
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:hint="District name .."
        android:fontFamily="@font/avenir_medium"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColorHint="#450b2636"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/body"
        app:layout_constraintLeft_toLeftOf="@+id/body"
        app:layout_constraintRight_toRightOf="@+id/body"
        android:layout_marginLeft="5dp"
        android:id="@+id/auto_com_text_dialog"
        android:completionThreshold="1"

        />

    <TextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="Done"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auto_com_text_dialog"
        android:layout_marginRight="15dp"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/avenir_roman"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/yes"/>




</android.support.constraint.ConstraintLayout>