<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitiesBeforeLogin.Splash"
    android:background="#020303">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_bike"
        android:id="@+id/bike_background"
        android:alpha=".4"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="180dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/white_logo"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/card"
        android:visibility="gone">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_started"
                android:textSize="16dp"
                android:fontFamily="@font/avenir_roman"
                android:textColor="#2a3b50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/already_a_user"
        android:textColor="#5a5a5c"
        app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/already"
        android:fontFamily="@font/avenir_roman"
        android:textSize="14dp"
        android:visibility="gone"
        android:gravity="bottom"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="&#169; 2019 All rights reserved to RANCON"
        android:textColor="#d9d9d9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/already2"
        android:fontFamily="@font/avenir_roman"
        android:textSize="12dp"
        android:visibility="gone"
        android:gravity="bottom"/>


</android.support.constraint.ConstraintLayout>