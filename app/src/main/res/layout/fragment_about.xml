<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorAccent6"
        android:id="@+id/bottom_button"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Continue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_light"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/roboto_regular"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/menu"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/main"
        android:background="#f9f9f9">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@drawable/rancon3"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/rancon2"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="About Us"
            android:fontFamily="@font/suzuki_pro_headline"
            android:textColor="@color/newOne"
            app:layout_constraintTop_toBottomOf="@+id/rancon2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16dp"
            android:id="@+id/about_us"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Warranty Policy"
            android:fontFamily="@font/suzuki_pro_headline"
            android:textColor="@color/newOne"
            app:layout_constraintTop_toBottomOf="@+id/about_us"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16dp"
            android:id="@+id/warranty_policy"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Legal Policy"
            android:fontFamily="@font/suzuki_pro_headline"
            android:textColor="@color/newOne"
            app:layout_constraintTop_toBottomOf="@+id/warranty_policy"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16dp"
            android:id="@+id/legal_policy"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Terms and Conditions"
            android:fontFamily="@font/suzuki_pro_headline"
            android:textColor="@color/newOne"
            app:layout_constraintTop_toBottomOf="@+id/legal_policy"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16dp"
            android:id="@+id/terms"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Contact Us"
            android:fontFamily="@font/suzuki_pro_headline"
            android:textColor="@color/newOne"
            app:layout_constraintTop_toBottomOf="@+id/terms"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16dp"
            android:id="@+id/contact"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Social With Suzuki"
            android:fontFamily="@font/suzuki_pro_headline"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toTopOf="@+id/social_logos"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="20dp"
            android:id="@+id/get_social"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@+id/copy_right"
            android:layout_marginBottom="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:id="@+id/social_logos">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fb2"
                android:id="@+id/fb"
                android:padding="15dp"
                android:tint="#314553"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/twit2"
                android:id="@+id/twit"
                android:padding="15dp"
                android:tint="#314553"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/insta2"
                android:id="@+id/insta"
                android:padding="15dp"
                android:tint="#314553"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/youtube2"
                android:id="@+id/youtube"
                android:padding="15dp"
                android:tint="#314553"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a9 2018 RANCON MOTORBIKES LTD."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/suzuki_pro_regular"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/copy_right"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/welcome"
        android:background="#f9f9f9"
        android:visibility="gone">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/survey_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/survey3"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="Quality Assurance Survey"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/colorAccent"
            android:textSize="28dp"
            android:gravity="center"
            android:id="@+id/survey_title"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/survey_title"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="We are conducting this survey to get review from our valued customers about the services provided by Suzuki Service Points."
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:id="@+id/survey_description"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toTopOf="@+id/start_survey"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Participate to get 100 loyalty points!"
            android:fontFamily="@font/poppins_thin"
            android:textColor="@color/colorAccent"
            android:textSize="17dp"
            android:id="@+id/survey_welcome"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/start_survey"
            android:background="@drawable/bg_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:text="Start Survey"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semi_bold"
            android:textAllCaps="false"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>