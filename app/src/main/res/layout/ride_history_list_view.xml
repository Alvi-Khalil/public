<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/club_cons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent6">



        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            android:orientation="horizontal"
            android:background="@drawable/bg_ride_history"
            android:id="@+id/l">

        </LinearLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline5"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="3000.908 K.M."
            android:gravity="center"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/distance_text"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:padding="2dp"

            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/start_flag"
            android:id="@+id/start_image"
            android:tint="@color/green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting Point"
            app:layout_constraintTop_toTopOf="@+id/start_image"
            app:layout_constraintLeft_toRightOf="@+id/start_image"
            app:layout_constraintBottom_toBottomOf="@+id/start_image"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green"
            android:fontFamily="@font/poppins_semi_bold"
            android:id="@+id/start_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guideline5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/start_text"
            android:text="Location : 93 b Banai, Dhaka, BAnfgladesh"
            android:textSize="11dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/white"
            android:id="@+id/start_loc"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guideline5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/start_loc"
            android:text="Time : 26 Nivenmber, 2018 03:54:12 am"
            android:textSize="9dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"
            android:id="@+id/start_time"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toTopOf="@id/end_loc"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginLeft="15dp"

            android:src="@drawable/end_flag"
            android:padding="5dp"
            android:id="@+id/end_image"
            android:tint="@color/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ending Point"
            app:layout_constraintTop_toTopOf="@+id/end_image"
            app:layout_constraintLeft_toRightOf="@+id/end_image"
            app:layout_constraintBottom_toBottomOf="@+id/end_image"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins_semi_bold"
            android:id="@+id/end_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guideline5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/end_time"
            android:text="Location : 93 b Banai, Dhaka, BAnfgladesh"
            android:textSize="11dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/white"
            android:id="@+id/end_loc"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guideline5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Time : 26 Nivenmber, 2018 03:54:12 am"
            android:textSize="9dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"
            android:id="@+id/end_time"/>

        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/start_time"
            app:layout_constraintBottom_toTopOf="@+id/end_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guideline5"
            android:background="@drawable/dashed_border"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/trash"
            android:paddingBottom="25dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:tint="@color/colorAccent"
            android:id="@+id/delete"/>
        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".65"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".45"/>
    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

